menu "StudioPieters"

    config ESP_LED_GPIO
        int "Set the GPIO for the LED"
        default 2
        help
            The GPIO number the LED is connected to.

    config ESP_BUTTON_GPIO
        int "Button GPIO"
        default 32
        help
            GPIO van de knop (actief laag als je button_config_default(button_active_low) gebruikt).

    config ESP_FAN_LOW_GPIO
        int "Remote button GPIO - LOW"
        default 25
        help
            ESP32 GPIO die naar de LOW-knop pad van de originele remote gaat (active-low naar GND via open-drain).

    config ESP_FAN_MED_GPIO
        int "Remote button GPIO - MED"
        default 26
        help
            ESP32 GPIO die naar de MED-knop pad van de originele remote gaat (active-low naar GND via open-drain).

    config ESP_FAN_HIGH_GPIO
        int "Remote button GPIO - HIGH"
        default 27
        help
            ESP32 GPIO die naar de HIGH-knop pad van de originele remote gaat (active-low naar GND via open-drain).

    config I2C_MASTER_SCL
        int "I2C SCL GPIO (SHT3x)"
        default 22
        help
            GPIO voor I2C SCL naar de SHT3x.

    config I2C_MASTER_SDA
        int "I2C SDA GPIO (SHT3x)"
        default 21
        help
            GPIO voor I2C SDA naar de SHT3x.

    config SHT3X_I2C_ADDRESS
        hex "SHT3x I2C address"
        default 0x44
        help
            SHT3x adres: meestal 0x44, soms 0x45 afhankelijk van ADDR pin.

    config ESP_HUMIDITY_AUTO_ENABLE
        bool "Enable automatic humidity fan control (SHT3x)"
        default y
        help
            Schakelt de automatische vochtregeling in/uit.
            Handig voor debug: zet uit om alleen handmatig via HomeKit te testen.

    config ESP_SETUP_CODE
        string "HomeKit Setup Code"
        default "374-29-730"
        help
            If you want to change the HomeKit Setup Code, you can do that here (Note: you need to make a new QR-CODE To make it work)

    config ESP_SETUP_ID
        string "HomeKit Setup ID"
        default "F5Z1"
        help
            If you want to change the HomeKit Setup ID, you can do that here (Note: you need to make a new QR-CODE To make it work)

endmenu
